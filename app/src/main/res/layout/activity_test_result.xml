<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".Activity.TestResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textview_design_test_circle"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="0"
                android:textSize="55dp"
                android:textColor="@android:color/white"
                android:shadowColor="#FF000000"
                android:shadowRadius="20"
                android:id="@+id/testNumberTextView"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/white_star"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/firstStarImageView"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/white_star"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/secondStarImageView"
                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/white_star"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/thirdStarImageView"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Тест Пройден!"
            android:textSize="40dp"
            android:textColor="#009688"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 points"
            android:textSize="20dp"
            android:textColor="#616161"
            android:gravity="center"
            android:id="@+id/resultTextView"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_design_test_result"
                android:gravity="center"
                android:text="Назад"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:id="@+id/returnButton"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_design_test_result"
                android:gravity="center"
                android:text="На главную"
                android:textSize="15dp"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="false"
                android:id="@+id/mainActivityButton"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
